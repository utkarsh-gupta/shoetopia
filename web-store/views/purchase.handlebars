<div class="container">
    <div class="row justify-content-center mt-3 mx-3">
        <div class="col-10">
            <div class="alert alert-success" role="alert">
                {{user.name}}, your purchase is successful. Payment mode is <b>Cash on delivery</b>.
            </div>
            <div class="row mt-2">
                <div>
                    <p class="text-decoration-underline fw-bold">Shipping Address</p>
                </div>
                <div>{{user.address}}</div>
                <div>{{user.suburb}}</div>
                <div>{{user.state}} {{user.pin}}</div>
                <div>{{user.country}}</div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center mt-5 mx-3">
        <div class="col-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Code</th>
                        <th scope="col">Name</th>
                        <th scope="col">Size (US)</th>
                        <th scope="col">Qty</th>
                        <th scope="col" class="tbl-cell-right">Price</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each cartData}}
                    <tr>
                        <th scope="row">{{code}}</th>
                        <td>{{name}}</td>
                        <td>{{shoeSize}}</td>
                        <td>{{pairCount}}</td>
                        <td class="tbl-cell-right">{{price}}</td>
                    </tr>
                    {{/each}}
                    <tr>
                        <th scope="row" class="tbl-cell-right" colspan="4"></th>
                        <td class="tbl-cell-right"><b>{{total}}</b></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col-8 d-flex justify-content-center align-items-center mt-3">
            <a href="/" class="btn btn-outline-danger btn-sm btn-w-2 mx-2">Back to Home</a>
        </div>
    </div>
</div>